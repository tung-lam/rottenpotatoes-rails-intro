-#  This file is app/views/movies/index.html.haml
%h1= link_to "All Movies", root_path

%table#movies
  %thead
    %tr 
      %th{class: "title" == params[:sort] ? "hilite" : nil}= sortable "title", "Movie Title"
      %th Rating
      %th{class: "release_date" == params[:sort] ? "hilite" : nil}= sortable "release_date", "Release Date"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
